<configs>
	<!-- Adjust pack mule perk for the increased number of encumbered slots -->
	<set xpath="/progression/perks/perk[@name='perkPackMule']/effect_group/passive_effect[@name='CarryCapacity']/@value">12,24,36,48,60</set>

	<!-- Adjust Firemans Almanac perk for the increased number of encumbered slots (set to max number of encumbered slots by default) -->
	<set xpath="/progression/perks/perk[@name='perkFiremansAlmanacComplete']/effect_group/passive_effect[@name='CarryCapacity']/@value">60</set>

	<!-- Adjust Night Stalker perk for the increased number of encumbered slots (set to max number of encumbered slots by default) -->
	<set xpath="/progression/perks/perk[@name='perkNightStalkerThiefAdrenaline']/effect_group/passive_effect[@name='CarryCapacity']/@value">60</set>
</configs>
